<div class="is-flex is-flex-direction-row is-justify-content-center">
  <div class="p-2", style="width: 650px;">
    <div class="">
      <div class="is-flex is-flex-direction-row is-justify-content-space-between">
        <h2 class="title mb-3">
          <%= t("signup") %>
        </h2>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages" , resource: resource %>


        <div class="field">
          <%= f.label "First name", class: "label" %><br />
          <div class="control has-icons-left has-icons-right">
            <%= f.text_field :first_name, autofocus: true, class: 'input' %>
            <span class="icon is-small is-left">
              <i class="far fa-user"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <%= f.label "Last name", class: "label" %><br />
          <div class="control has-icons-left has-icons-right">
            <%= f.text_field :last_name, class: 'input' %>
            <span class="icon is-small is-left">
              <i class="far fa-id-card"></i>
            </span>
          </div>
        </div>
        <br>
      


        <div class="field">
          <%= f.label "Email", class: "field-label label", style: "text-align: initial;" %><br>
          <p class="control is-expanded has-icons-left has-icons-right">
            <%= f.email_field :email, autocomplete: "email" , class: 'input', type: "email", placeholder:"example@example.com" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>
        </div>

           <div class="field">
         
          <%= f.label "Password", class: "label" %><br />
         <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length   %> <%= t("validpass") %>) </em>
          <% end %>
          <p class="control has-icons-left">
          <%= f.password_field :password, autocomplete: "new-password" , class: 'input' %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>

         <div class="field">
          <%= f.label "Confirm password", class: "label" %><br />
          <p class="control has-icons-left">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'input' %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>

        <%= f.submit "Sign up", class: "button mt-3" %>

          <div class="actions">
            <div class="mt-3">
              <span class="icon">
                <i class="fas fa-arrow-left"></i>
              </span>
              <%= render "devise/shared/links" %>
            </div>

            <% end %>


          </div>

  </div>
</div>